@page
@model IdentityServer.Pages.Diagnostics.Index
<div class="diagnostics-page">
	<div class="lead">
		<h1>Authentication Cookie</h1>
	</div>
	<div class="row">
		<div class="col">
			<div class="card">
				<div class="card-header">
					<h2>Claims</h2>
				</div>
				<div class="card-body">
					<dl>
						@foreach(var claim in Model.View.Claims)
						{
							<dt>@claim.Type</dt>
							<dd>@claim.Value</dd>
						}
					</dl>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="card">
				<div class="card-header">
					<h2>Properties</h2>
				</div>
				<div class="card-body">
					<dl>
						@foreach(var (key, value) in Model.View.Properties)
						{
							<dt>@key</dt>
							<dd>@value</dd>
						}
						@if(Model.View.Clients.Any())
						{
							<dt>Clients</dt>
							<dd>
								@string.Join(", ", Model.View.Clients)
							</dd>
						}
					</dl>
				</div>
			</div>
		</div>
	</div>
</div>